{
	"swagger": "2.0",
	"info": {
		"description": "This is a simple NodeJS API code golf project to demonstrate NodeJS, Typescript, and OpenAPI.",
		"version": "1.0.0",
		"title": "NodeChat"
	},
	"schemes": ["http"],
	"host": "localhost:3000",
	"basePath": "/",
	"paths": {
		"/users": {
			"get": {
				"summary": "Get all Users",
				"description": "Get all Users",
				"produces": ["application/json"],
				"parameters": [],
				"responses": {
					"200": {
						"description": "OK",
						"schema": {
							"type": "array",
							"items": {
								"$ref": "#/definitions/UserModel"
							}
						}
					}
				}
			}
		},
		"/users/{id}": {
			"get": {
				"summary": "Get Users By Id",
				"description": "Get Users By Id",
				"produces": ["application/json"],
				"parameters": [{
					"name": "id",
					"in": "path",
					"description": "id of user to return",
					"required": true,
					"type": "string"
				}],
				"responses": {
					"200": {
						"description": "OK",
						"schema": {
							"type": "object",
							"$ref": "#/definitions/UserModel"
						}
					},
					"400": {
						"description": "Bad Request",
						"schema": {
							"$ref": "#/definitions/GeneralInvalidResponse"
						}
					},
					"404": {
						"description": "Not Found",
						"schema": {
							"$ref": "#/definitions/GeneralInvalidResponse"
						}
					}
				}
			}
		},
		"/messages": {
			"get": {
				"summary":"Get all Messages",
				"description": "Get all Messages",
				"produces": ["application/json"],
				"parameters": [],
				"responses": {
					"200": {
						"description": "OK",
						"schema": {
							"type": "array",
							"items": {
								"$ref": "#/definitions/MessageModel"
							}
						}
					}
				}
			},
			"post": {
				"summary": "Create new Message",
				"description": "Create new Message",
				"produces": ["application/json"],
				"parameters": [{
					"name": "body",
					"in": "body",
					"description": "Message model",
					"required": true,
					"schema": {
						"type": "object",
						"$ref": "#/definitions/MessageModel"
					}
				}],
				"responses": {
					"200": {
						"description": "OK",
						"schema": {
							"type": "object",
							"$ref": "#/definitions/MessageModel"
						}
					},
					"400": {
						"description": "Bad Request",
						"schema": {
							"$ref": "#/definitions/GeneralInvalidResponse"
						}
					},
					"500": {
						"description": "Internal Server Error",
						"schema": {
							"$ref": "#/definitions/GeneralInvalidResponse"
						}
					}										
				}
			}
		}
	},
	"definitions": {
		"UserModel": {
			"type": "object",
			"properties": {
				"id": {
					"type": "string"
				},
				"firstname": {
					"type": "string"
				},
				"lastname": {
					"type": "string"
				},
				"email": {
					"type": "string"
				},
				"mobilephone": {
					"type": "string"
				},
				"loginid": {
					"type": "string"
				}				
			}
		},
		"MessageModel": {
			"type": "object",
			"properties": {
				"id": {
					"type": "string",
					"nullable": true
				},
				"userid": {
					"type": "string",
					"nullable": true
				},
				"messagedate": {
					"type": "string",
					"nullable": true
				},
				"messagetext": {
					"type": "string",
					"nullable": true
				}				
			}
		},		
		"GeneralInvalidResponse": {
			"type": "object",
            "properties": {
				"statusCode": {
					"type": "string"
				},
				"message": {
					"type": "string"
				}
			}
		}		
	}
}
